{
  "name": "ayla-brightness-controller",
  "version": "1.0.1",
  "description": "Brightness Controller for External Mac Displays",
  "author": "Burak Çalık",
  "main": "app.js",
  "scripts": {
    "start": "electron ./app",
    "clean": "rm -rf ./dist/osx",
    "build": "npm run clean && electron-packager ./app \"Ayla\" --out=dist/osx --platform=darwin --arch=x64 --electron-version=1.8.8 --icon=assets/manapot.icns"
  },
  "devDependencies": {
    "electron": "^1.8.8",
    "electron-packager": "^12.1.1"
  }
}
